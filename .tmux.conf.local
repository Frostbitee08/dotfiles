## Add your local tmux config here
#
set-option -g default-command "reattach-to-user-namespace -l zsh"
set-option -g default-shell /bin/zsh

## new panes will open in current working directory
DIR=/Volumes/Storage/
bind '"' split-window -c "$DIR"
bind % split-window -h -c "$DIR"
bind c new-window -c "$DIR"
#
set -s escape-time 0
